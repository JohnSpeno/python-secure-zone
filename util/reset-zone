cd /usr/local/etc/bind/zones/$1

sudo -u named rm -f K$1*.key
sudo -u named rm -f K$1*.private
sudo -u named rm newkeys/K$1*.key
sudo -u named rm newkeys/K$1*.private
sudo -u named rm oldkeys/K$1*.key
sudo -u named rm oldkeys/K$1*.private

rndc freeze $1
sudo -u named cp zonefile.orig zonefile
rndc thaw $1
